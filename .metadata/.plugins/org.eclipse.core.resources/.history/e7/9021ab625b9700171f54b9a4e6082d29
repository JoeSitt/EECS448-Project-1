package scheduler;

import java.time.LocalTime;
import java.util.ArrayList;
import java.util.List;
import java.util.TreeSet;

public class Time implements Comparable<Time> {
	
	public LocalTime time;
	public List<String> attendeeList;
	
	public Time(String timeString) {
		time = parseTime(timeString);
		attendeeList = new ArrayList<String>();
	}
	
	public static LocalTime parseTime(String timeString) {
		
		LocalTime time;
		
		// verify that time string is correctly formatted
		try {
			time = LocalTime.parse(timeString);
		} catch (Exception e) {
			return null;
		}
		
		// verify that time is at a 30 min mark
		if (time.getMinute() != 0 && time.getMinute() != 30) {
			return null;
		}
		
		return time;
	}
	
	public static void main(String[] args) {
		
		String timeString = "23:30:00";		
		Time t1 = new Time(timeString);
		
		timeString = "22:30:00";
		Time t2 = new Time(timeString);
		
		timeString = "23:00:00";
		Time t3 = new Time(timeString);
		

		
		TreeSet<Time> set = new TreeSet<Time>();
		
		set.add(t1);
		set.add(t2);
		set.add(t3);
		
		System.out.println(set.toString());
	}

	public int compareTo(Time o) {
		return this.time.compareTo(o.time);
	}

}
