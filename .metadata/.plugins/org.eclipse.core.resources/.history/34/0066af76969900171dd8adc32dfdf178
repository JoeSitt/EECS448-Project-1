		Manager mrM = new Manager();
		
		Date date = mrM.parseDate("01/01/2017");
		Date date2 = mrM.parseDate("01/01/2017");
		
		if (date != null) {
			System.out.println();
		} else {
			System.out.println("Unreconignized");
		}
		
		
